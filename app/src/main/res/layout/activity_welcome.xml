<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bester.bester_mediaplay.WelcomeActivity">
    <Button
        android:id="@+id/btn_welcome_skip"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_btn"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:text="@string/skip"/>

    <ImageView
        android:id="@+id/iv_welcome_icon"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/bester_icon"/>
    <LinearLayout
        android:layout_below="@id/iv_welcome_icon"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"/>
        <TextView
            android:id="@+id/tv_welcome_text"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_text"/>
    </LinearLayout>

</RelativeLayout>
