<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#88000000"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/bester_icon"/>
    <LinearLayout
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_content_title"
            android:text="歌曲名"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_content_text"
            android:text="歌曲艺术家"
            android:textColor="#88ffffff"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_notification_pre"
        android:background="@drawable/btn_pre_big_selector"
        android:layout_margin="10dp"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <ImageButton
        android:id="@+id/btn_notification_playorpause"
        android:background="@drawable/btn_play_selector"
        android:layout_margin="10dp"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <ImageButton
        android:id="@+id/btn_notification_next"
        android:background="@drawable/btn_next_big_selector"
        android:layout_margin="10dp"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/btn_notification_cencel"
            android:background="@drawable/btn_cencel_selector"
            android:layout_margin="5dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </RelativeLayout>



</LinearLayout>
