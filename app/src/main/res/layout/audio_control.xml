<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    >
    <LinearLayout
        android:id="@+id/ll_audio_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_player_bottom_control">
        <ImageButton
            android:id="@+id/btn_audio_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_media_back_selector"/>
        <LinearLayout
            android:id="@+id/ll_audio_information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_audio_name"
                android:text="歌曲名"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_audio_artist"
                android:textColor="#88ffffff"
                android:text="歌曲艺术家名"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/btn_audio_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_audio_share_selector"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#212121">
            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_time"
                android:layout_marginLeft="8dp"
                android:textColor="#99ffffff"/>
            <SeekBar
                android:id="@+id/progress_control"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:maxHeight="6dp"
                android:minHeight="6dp"
                android:thumb="@drawable/progress_thumb"
                android:progressDrawable="@drawable/progress_horizontal"
                />
            <TextView
                android:id="@+id/audio_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_time"
                android:layout_marginRight="8dp"
                android:textColor="#99ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal"
            android:background="#212121">
            <Button
                android:id="@+id/btn_audio_mode"
                android:layout_weight="1"
                android:background="@drawable/btn_audio_cycle_list_selector"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                />
            <Button
                android:id="@+id/btn_pre_big"
                android:layout_weight="1"
                android:background="@drawable/btn_pre_big_selector"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
            <Button
                android:id="@+id/btn_play_or_pause"
                android:layout_weight="1"
                android:background="@drawable/btn_pause_selector"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
            <Button
                android:id="@+id/btn_next_big"
                android:layout_weight="1"
                android:background="@drawable/btn_next_big_selector"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
            <Button
                android:id="@+id/btn_audio_list"
                android:layout_weight="1"
                android:background="@drawable/btn_audio_list_selector"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                />
        </LinearLayout>
    </LinearLayout>

    <com.bester.view.ShowLyric
        android:id="@+id/tv_showLyric"
        android:layout_below="@id/ll_audio_top"
        android:layout_above="@id/bottom_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>